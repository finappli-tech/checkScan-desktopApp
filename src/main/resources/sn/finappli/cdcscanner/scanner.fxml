<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" styleClass="bg-white" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sn.finappli.cdcscanner.controller.ScanController">
    <!--    Navigation bar -->

    <FlowPane alignment="CENTER_LEFT" columnHalignment="CENTER" hgap="265.0" maxHeight="60.0" maxWidth="900.0" minHeight="60.0" minWidth="900.0" prefHeight="60.0" prefWidth="900.0" prefWrapLength="350.0" styleClass="blue-nav">
        <padding>
            <Insets left="10.0" right="10.0" />
        </padding>
        <Button mnemonicParsing="false" onAction="#goHome" styleClass="return-button" text="Retour">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>

        <Label prefHeight="40.0" prefWidth="378.0" text="Nouveau Scan">
            <styleClass>
                <String fx:value="text-xl" />
                <String fx:value="text-left" />
                <String fx:value="text-white" />
            </styleClass>
        </Label>
    </FlowPane>

    <!--    Form -->
    <Button layoutX="104.0" layoutY="90.0" mnemonicParsing="false" onAction="#print" styleClass="launch-scan-button" text="Lancer le scan">
        <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </padding>
    </Button>

    <Label layoutX="15.0" layoutY="173.0" text="Date">
        <styleClass>
            <String fx:value="text-right" />
            <String fx:value="text-blue" />
            <String fx:value="text-sm" />
        </styleClass>
    </Label>
    <DatePicker fx:id="dateField" disable="true" layoutX="14.0" layoutY="190.0" prefHeight="33.0" prefWidth="299.0" />

    <Label layoutX="14.0" layoutY="243.0" text="CMC">
        <styleClass>
            <String fx:value="text-right" />
            <String fx:value="text-blue" />
            <String fx:value="text-sm" />
        </styleClass>
    </Label>
    <TextField fx:id="cmcField" disable="true" layoutX="14.0" layoutY="260.0" prefHeight="33.0" prefWidth="299.0">
        <styleClass>
            <String fx:value="field" />
            <String fx:value="blue-border" />
            <String fx:value="text-sm" />
        </styleClass>
    </TextField>

    <Label layoutX="14.0" layoutY="314.0" text="Bénéficiaire">
        <styleClass>
            <String fx:value="text-right" />
            <String fx:value="text-blue" />
            <String fx:value="text-sm" />
        </styleClass>
    </Label>
    <TextField fx:id="recipientField" disable="true" layoutX="14.0" layoutY="331.0" prefHeight="33.0" prefWidth="299.0">
        <styleClass>
            <String fx:value="field" />
            <String fx:value="blue-border" />
            <String fx:value="text-sm" />
        </styleClass>
    </TextField>

    <Label layoutX="14.0" layoutY="381.0" text="Montant">
        <styleClass>
            <String fx:value="text-right" />
            <String fx:value="text-blue" />
            <String fx:value="text-sm" />
        </styleClass>
    </Label>
    <TextField fx:id="amountField" disable="true" layoutX="14.0" layoutY="398.0" prefHeight="33.0" prefWidth="299.0">
        <styleClass>
            <String fx:value="field" />
            <String fx:value="blue-border" />
            <String fx:value="text-sm" />
        </styleClass>
    </TextField>
    <ProgressIndicator fx:id="loader" layoutX="138.0" layoutY="515.0" visible="false" />

    <Button fx:id="send" alignment="CENTER" disable="true" layoutX="39.0" layoutY="455.0" mnemonicParsing="false" onAction="#sendCheck" prefHeight="25.0" prefWidth="250.0" text="Envoyer">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>

    <!--    Separator -->
    <Line endX="-100.0" endY="507.0" fill="#0957B5" layoutX="443.0" layoutY="92.0" startX="-100.0" startY="-29.0" stroke="#0957B5" strokeWidth="2.0" />

    <!--    Previewer -->

    <Label layoutX="531.0" layoutY="80.0" prefHeight="17.0" prefWidth="189.0" text="RECTO">
        <styleClass>
            <String fx:value="text-center" />
            <String fx:value="text-blue" />
            <String fx:value="text-base" />
        </styleClass>
    </Label>
    <BorderPane layoutX="375.0" layoutY="110.0" styleClass="check-image-view">
        <center>
            <ImageView fitHeight="200.0" fitWidth="500.0" pickOnBounds="true">
            <image>
               <Image url="@../../../images/specimen-recto.jpg" />
            </image></ImageView>
        </center>
      <padding>
         <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
      </padding>
    </BorderPane>

    <Label layoutX="531.0" layoutY="342.0" prefHeight="17.0" prefWidth="189.0" text="VERSO">
        <styleClass>
            <String fx:value="text-center" />
            <String fx:value="text-blue" />
            <String fx:value="text-base" />
        </styleClass>
      <padding>
         <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </padding>
    </Label>
    <BorderPane layoutX="375.0" layoutY="365.0" styleClass="check-image-view">
        <center>
            <ImageView fitHeight="200.0" fitWidth="500.0" pickOnBounds="true" />
        </center>
      <padding>
         <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
      </padding>
    </BorderPane>

</AnchorPane>
