<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.Group?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import java.lang.String?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="900.0" styleClass="bg-white"
            xmlns="http://javafx.com/javafx/11.0.14-internal"
            fx:controller="sn.finappli.cdcscanner.controller.ScanController">

    <!--    Nav bar -->
    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="900.0" spacing="160.0" styleClass="blue-nav">
        <Button fx:id="homeButton" mnemonicParsing="false" onAction="#goHome" styleClass="return-button" text="Retour">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>

        <Label alignment="CENTER" prefHeight="40.0" prefWidth="377.0" text="Nouveau Scan">
            <styleClass>
                <String fx:value="text-xl"/>
                <String fx:value="text-center"/>
                <String fx:value="text-white"/>
            </styleClass>
        </Label>

        <Button fx:id="sendButton" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#sendCheck"
                prefHeight="25.0" prefWidth="95.0" styleClass="send-button" text="Envoyer">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </HBox>

    <!--    Form -->
    <Pane fx:id="container" layoutY="48.0" prefWidth="900.0">
        <Button layoutX="90.0" layoutY="24.0" mnemonicParsing="false" onAction="#fetchScannedItems"
                styleClass="launch-scan-button" text="Importer les scans">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
        </Button>
        <Group layoutX="10.0" layoutY="84.0">
            <Label layoutX="1.0" text="Date">
                <styleClass>
                    <String fx:value="text-right"/>
                    <String fx:value="text-blue"/>
                    <String fx:value="text-sm"/>
                </styleClass>
            </Label>
            <DatePicker fx:id="dateField" disable="true" layoutY="17.0" prefHeight="33.0" prefWidth="299.0"/>

            <Label layoutY="70.0" text="CMC">
                <styleClass>
                    <String fx:value="text-right"/>
                    <String fx:value="text-blue"/>
                    <String fx:value="text-sm"/>
                </styleClass>
            </Label>
            <TextField fx:id="cmcField" disable="true" layoutY="87.0" prefHeight="33.0" prefWidth="299.0">
                <styleClass>
                    <String fx:value="field"/>
                    <String fx:value="blue-border"/>
                    <String fx:value="text-sm"/>
                    <String fx:value="bold-disabled"/>
                </styleClass>
            </TextField>

            <Label layoutY="141.0" text="Bénéficiaire">
                <styleClass>
                    <String fx:value="text-right"/>
                    <String fx:value="text-blue"/>
                    <String fx:value="text-sm"/>
                </styleClass>
            </Label>
            <TextField fx:id="recipientField" disable="true" layoutY="158.0" prefHeight="33.0" prefWidth="299.0">
                <styleClass>
                    <String fx:value="field"/>
                    <String fx:value="blue-border"/>
                    <String fx:value="text-sm"/>
                    <String fx:value="bold-disabled"/>
                </styleClass>
            </TextField>

            <Label layoutY="208.0" text="Montant">
                <styleClass>
                    <String fx:value="text-right"/>
                    <String fx:value="text-blue"/>
                    <String fx:value="text-sm"/>
                </styleClass>
            </Label>
            <TextField fx:id="amountField" disable="true" layoutY="225.0" prefHeight="33.0" prefWidth="299.0">
                <styleClass>
                    <String fx:value="field"/>
                    <String fx:value="blue-border"/>
                    <String fx:value="text-sm"/>
                    <String fx:value="bold-disabled"/>
                </styleClass>
            </TextField>
        </Group>

        <!-- Check Pagination -->
        <HBox alignment="CENTER" layoutX="221.0" layoutY="353.0" prefHeight="30.0" prefWidth="86.0" spacing="5.0">
            <Button fx:id="paginationPrevious" disable="true" layoutY="10.0" maxHeight="16.0" maxWidth="16.0"
                    minHeight="16.0" minWidth="16.0" mnemonicParsing="false" onAction="#showPreviousCheck"
                    prefHeight="16.0" prefWidth="16.0" styleClass="pagination-previous"/>
            <Label fx:id="paginationCount" styleClass="text-sm" text="0/0" textFill="#0957b5">
                <padding>
                    <Insets left="4.0" right="4.0"/>
                </padding>
            </Label>
            <Button fx:id="paginationNext" disable="true" layoutX="36.0" layoutY="10.0" maxHeight="16.0" maxWidth="16.0"
                    minHeight="16.0" minWidth="16.0" mnemonicParsing="false" onAction="#showNextCheck" prefHeight="16.0"
                    prefWidth="16.0" styleClass="pagination-next"/>
        </HBox>

        <!-- Info -->
        <VBox layoutX="14.0" layoutY="447.0" prefHeight="80.0" prefWidth="280.0" spacing="6.0">
            <Label fx:id="numberOfCheck">
                <styleClass>
                    <String fx:value="text-blue"/>
                    <String fx:value="text-sm"/>
                </styleClass>
            </Label>
            <Label fx:id="numberOfCompletedCheck">
                <styleClass>
                    <String fx:value="text-blue"/>
                    <String fx:value="text-sm"/>
                </styleClass>
            </Label>
            <Label fx:id="numberOfRejectedCheck" visible="false">
                <styleClass>
                    <String fx:value="text-blue"/>
                    <String fx:value="text-sm"/>
                </styleClass>
            </Label>
        </VBox>

        <!--    Separator -->
        <Line endX="-100.0" endY="507.0" fill="#0957B5" layoutX="431.0" layoutY="49.0" startX="-100.0" startY="-49.0"
              stroke="#0957B5" strokeWidth="2.0"/>

        <!--    Previewer -->
        <Group layoutX="361.0" layoutY="31.0">
            <Label layoutX="156.0" prefHeight="17.0" prefWidth="189.0" text="RECTO">
                <styleClass>
                    <String fx:value="text-center"/>
                    <String fx:value="text-blue"/>
                    <String fx:value="text-base"/>
                </styleClass>
            </Label>
            <BorderPane layoutY="30.0" styleClass="check-image-view">
                <center>
                    <ImageView fx:id="recto" fitHeight="200.0" fitWidth="500.0" pickOnBounds="true"/>
                </center>
                <padding>
                    <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                </padding>
            </BorderPane>

            <Label layoutX="156.0" layoutY="250.0" prefHeight="17.0" prefWidth="189.0" text="VERSO">
                <styleClass>
                    <String fx:value="text-center"/>
                    <String fx:value="text-blue"/>
                    <String fx:value="text-base"/>
                </styleClass>
                <padding>
                    <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                </padding>
            </Label>
            <BorderPane layoutY="285.0" styleClass="check-image-view">
                <center>
                    <ImageView fx:id="verso" fitHeight="200.0" fitWidth="500.0" pickOnBounds="true"/>
                </center>
                <padding>
                    <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                </padding>
            </BorderPane>
        </Group>
    </Pane>

    <!--    Loader container-->
    <Pane fx:id="loaderContainer" layoutX="300.0" layoutY="220.0" maxHeight="150.0" maxWidth="300.0" minHeight="150.0"
          minWidth="300.0" prefHeight="150.0" prefWidth="300.0"
          style="-fx-background-color: wheat; -fx-border-style: solid; -fx-border-radius: 8; -fx-border-color: #0957B5;"
          visible="false">
        <ProgressIndicator fx:id="loader" layoutX="124.0" layoutY="22.0" prefHeight="100.0" prefWidth="100.0" />
        <Label alignment="CENTER" layoutX="10.0" layoutY="97.0" prefHeight="30.0" prefWidth="280.0"
               styleClass="text-base" text="Chargement ..." textFill="#0957b5"/>
    </Pane>

</AnchorPane>
